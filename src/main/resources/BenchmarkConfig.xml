<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark xmlns="https://timefold.ai/xsd/benchmark" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://timefold.ai/xsd/benchmark https://timefold.ai/xsd/benchmark/benchmark.xsd">
    <benchmarkDirectory>local/benchmarkReport</benchmarkDirectory>

    <inheritedSolverBenchmark>
        <solver>
            <environmentMode>REPRODUCIBLE</environmentMode>
            <!-- Define the model -->
            <solutionClass>org.lu.df.formula1.domain.RoutingSolution</solutionClass>
            <entityClass>org.lu.df.formula1.domain.Stage</entityClass>

            <!-- Define the score function -->
            <scoreDirectorFactory>
                <constraintProviderClass>org.lu.df.formula1.solver.StreamCalculator</constraintProviderClass>
            </scoreDirectorFactory>

            <!-- Configure the optimization algorithms (optional) -->
            <termination>
                <secondsSpentLimit>10</secondsSpentLimit>
            </termination>

            <constructionHeuristic />
        </solver>
       <problemBenchmarks>
            <solutionFileIOClass>org.lu.df.formula1.domain.RoutingSolutionJsonIO</solutionFileIOClass>
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
            <inputSolutionFile>data/problems/problem_2023_full.json</inputSolutionFile>
        </problemBenchmarks>
    </inheritedSolverBenchmark>

    <solverBenchmark>
        <name>Tabu 5 500</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>5</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>500</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>Tabu 10 1000</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>10</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1000</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>
    <solverBenchmark>
        <name>LAHC 400</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>400</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

</plannerBenchmark>