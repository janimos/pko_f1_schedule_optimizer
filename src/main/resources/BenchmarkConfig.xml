<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark xmlns="https://timefold.ai/xsd/benchmark" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://timefold.ai/xsd/benchmark https://timefold.ai/xsd/benchmark/benchmark.xsd">
    <benchmarkDirectory>local/benchmarkReport</benchmarkDirectory>

    <inheritedSolverBenchmark>
        <solver>
            <environmentMode>REPRODUCIBLE</environmentMode>
            <!-- Define the model -->
            <solutionClass>org.lu.df.formula1.domain.RoutingSolution</solutionClass>
            <entityClass>org.lu.df.formula1.domain.Stage</entityClass>

            <!-- Define the score function -->
            <scoreDirectorFactory>
                <constraintProviderClass>org.lu.df.formula1.solver.StreamCalculator</constraintProviderClass>
            </scoreDirectorFactory>

            <!-- Configure the optimization algorithms (optional) -->
            <termination>
                <secondsSpentLimit>30</secondsSpentLimit>
            </termination>

            <constructionHeuristic />
        </solver>
       <problemBenchmarks>
            <solutionFileIOClass>org.lu.df.formula1.domain.RoutingSolutionJsonIO</solutionFileIOClass>
            <writeOutputSolutionEnabled>true</writeOutputSolutionEnabled>
            <inputSolutionFile>data/problems/problem_5_5.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_5_10.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_2023_6.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_2023_10.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_2023_15.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_2023_20.json</inputSolutionFile>
            <inputSolutionFile>data/problems/problem_2023_full.json</inputSolutionFile>
        </problemBenchmarks>
    </inheritedSolverBenchmark>

    <!-- Tabu Search Configurations -->
    <solverBenchmark>
        <name>Tabu Search Small</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>2</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>200</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>Tabu Search Medium</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>7</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>700</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>Tabu Search Large</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <valueTabuSize>15</valueTabuSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1500</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <!-- Late Acceptance Configuration -->
    <solverBenchmark>
        <name>Late Acceptance Small</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>200</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>1</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>Late Acceptance Medium</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>500</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>5</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

    <solverBenchmark>
        <name>Late Acceptance Large</name>
        <solver>
            <localSearch>
                <unionMoveSelector>
                    <changeMoveSelector />
                </unionMoveSelector>
                <acceptor>
                    <lateAcceptanceSize>1000</lateAcceptanceSize>
                </acceptor>
                <forager>
                    <acceptedCountLimit>10</acceptedCountLimit>
                </forager>
            </localSearch>
        </solver>
    </solverBenchmark>

</plannerBenchmark>